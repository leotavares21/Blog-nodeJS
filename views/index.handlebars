
<div class="row">
    <div class="slide-container">

        {{#each posts}}
            <div class="carousel-body fade">

                <div class="carousel-img">
                        <img src="/files/{{image}}" alt="Boo blog" class="col-12">
                </div>

                <div class="carousel-content col-5">
                    <button class="carousel-btn btn-orange">{{category.name}}</button>

                    <h2 class="carousel-title">{{title}}</h2>

                    <ul class="post-info">
                        <li>Criador</li>
                        <li>Data</li>
                        <li>Comentarios</li>
                        <li>Visitas</li>
                    </ul>

                </div>
            </div>
        {{else}}

        {{/each}}

        <div class="dots">
            <span class="dot"></span> 
            <span class="dot"></span> 
            <span class="dot"></span> 
        </div>
    </div>
</div>
    
