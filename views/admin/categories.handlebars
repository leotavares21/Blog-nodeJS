<div class="container mt-4">
    <h2>Lista de categorias:</h2>
    <hr>
    <a href="/admin/categorias/add"><button class="btn-shape btn-orange">Nova Categoria</button></a>

    {{#each categories}}
        <div class="">
            <div class="">
                <br>
                <h4>{{name}}</h4>
                <small>Slug: {{slug}}</small><br>
                <small>Data de criação: {{date}} </small>
                <br>
                <br>
                <a href="/admin/categorias/edit/{{_id}}"><button class="btn-shape">Editar Categoria</button></a>
                <br>
                <br>
                    <form action="/admin/categorias/deletar" method="POST">
                        <input type="hidden" name="id" value="{{_id}}">
                        <button type="submit" class="btn-shape" style="background-color: lightblue">Deletar Categoria</button>
                    </form>
            </div>
        </div>
    {{else}}
        <h4 class="mt-4"><mark>Nenhuma categoria registrada</mark></h4>
    {{/each}}

</div>