<div class="container">
    {{#each erros}}
        <div class="alert alert-error">{{msg}}</div>
    {{else}}

    {{/each}}
    <h3 class="mt-4">Editar categoria:</h3>
    <hr>
    <div class="card">
        <div class="card-body">
            <form action="/admin/categorias/edit" method="POST">

            <input type="hidden" name="id" value="{{category._id}}">

                <br>
                <Label for="nome">Nome:</Label>
                    <input type="text" id="nome" name="nome" placeholder="Nome da categoria" value="{{category.name}}">
                        <br>
                        <br>
                <label for="slug">Slug:</label>
                    <input type="text" id="slug" name="slug" placeholder="Nome do slug"  value="{{category.slug}}">
                        <br>
                        <br>
                    <button type="submit" class="btn-shape btn-orange">Editar Categoria</button>
            </form>
        </div>
    </div>
</div>