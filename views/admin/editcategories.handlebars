<div class="container">
    {{#each erros}}
        <div class="alert alert-error">{{msg}}</div>
    {{else}}

    {{/each}}
    <h3 class="user-title">Editar categoria:</h3>

    <div class="card mt-4">
        <div class="card-content">
            <form action="/admin/categorias/edit" method="POST">

            <input type="hidden" name="id" value="{{category._id}}">

                <Label for="nome" class="form-label">Nome:</Label>
                    <input type="text" class="form-input" id="nome" name="nome" placeholder="Nome da categoria" value="{{category.name}}">

                <label for="slug" class="form-label">Slug:</label>
                    <input type="text" class="form-input" id="slug" name="slug" placeholder="Nome do slug"  value="{{category.slug}}">

                    <button type="submit" class="btn btn-orange mt-4">Editar Categoria</button>
            </form>
        </div>
    </div>
</div>