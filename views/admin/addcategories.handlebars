<div class="container">
    {{#each erros}}
        <div class="alert alert-error">{{msg}}</div>
    {{else}}

    {{/each}}
    <h3 class="mt-4">Nova categoria:</h3>
    <hr>
    <div class="card">
        <div class="card-body">
            <form action="/admin/categorias/nova" method="POST">
                <br>
                <Label for="nome">Nome:</Label>
                    <input type="text" id="nome" name="nome" placeholder="Nome da categoria" class="form-control">
                        <br>
                        <br>
                <label for="slug">Slug:</label>
                    <input type="text" id="slug" name="slug" placeholder="Nome do slug" class="form-control">
                        <br>
                        <br>
                    <button type="submit" class="btn-shape btn-orange">Criar categoria</button>
            </form>
        </div>
    </div>
</div>