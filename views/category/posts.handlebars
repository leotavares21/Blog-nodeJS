<div class="container">
    <h1>{{category.name}}</h1>

    {{#each posts}}
        <div class="card mt-4">
            <div class="card-body">
                <h3>{{title}}</h3>
                <p>{{description}}</p>
                <a href="/postagem/{{slug}}"><button class="btn btn-success">Leia mais</button></a>
                <hr>
                <small>Data de publicação: {{date}}</small>
            </div>
        </div>
    {{else}}
        <h5><mark>Nenhuma postagem</mark></h5>
    {{/each}}
</div>